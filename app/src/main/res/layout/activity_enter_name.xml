<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView_enter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_enter_name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextPseudo"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/bouton_valider_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bouton_valider_nom"
            android:onClick="onValiderPseudo"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>